        return;
      } catch (shareError) {
        console.log('Compartilhamento nativo falhou:', shareError);
      }
    }

    // Preparar texto da mensagem
    const text = `üìä *Dados da Produ√ß√£o - ${formatarData(itemSelecionado.value.DataFoto)}*

üìÖ Data: ${formatarData(itemSelecionado.value.DataFoto)}
